@inherits LayoutComponentBase

<MudThemeProvider Theme="_theme" />
<MudDialogProvider />
<MudSnackbarProvider />

<AuthorizeView>
    <NotAuthorized>
        <MudAppBar Elevation="25">
            <MudHidden Breakpoint="Breakpoint.SmAndDown">
                <MudIcon Icon="@Icons.Material.Filled.Store" Size="Size.Large" />
            </MudHidden>
            <MudHidden Breakpoint="Breakpoint.SmAndDown" Invert="true">
                <MudIcon Icon="@Icons.Custom.Brands.MudBlazor" Class="mr-3" Size="Size.Medium" />
            </MudHidden>
            <MudHidden Breakpoint="Breakpoint.Xs">
                <MudText Typo="Typo.h6" Class="ml-4">Admin</MudText>
            </MudHidden>
            <MudHidden Breakpoint="Breakpoint.Xs" Invert="true">
                <MudText Typo="Typo.subtitle2">Admin</MudText>
            </MudHidden>
            <MudSpacer />
            <MudMenu Icon="@Icons.Material.Outlined.Translate" Color="Color.Inherit" Direction="Direction.Bottom" OffsetY="true" Dense="true">
                <MudMenuItem>English</MudMenuItem>
                <MudMenuItem>Swedish</MudMenuItem>
                <MudMenuItem>Old Norse</MudMenuItem>
            </MudMenu>
            <MudMenu Icon="@Icons.Material.Outlined.Widgets" Color="Color.Inherit" Direction="Direction.Bottom" OffsetY="true" Dense="true">
                <MudMenuItem Link="https://mudblazor.com/">MudBlazor</MudMenuItem>
                <MudMenuItem Link="https://github.com/DevJr14/Uniform">Source Code</MudMenuItem>
            </MudMenu>
        </MudAppBar>
        <MudContainer MaxWidth="MaxWidth.Small" Class="d-flex align-center" Style="height: 100vh;">
            <MudPaper Elevation="25" Class="py-4" Style="width: 500px;">
                <MudContainer MaxWidth="MaxWidth.False" Class="mt-4">
                    @Body
                </MudContainer>
            </MudPaper>
        </MudContainer>
    </NotAuthorized>
    <Authorized>
        <MudLayout>
            <MudAppBar Elevation="25">
                <MudHidden Breakpoint="Breakpoint.SmAndDown">
                    <MudIcon Icon="@Icons.Material.Filled.Store" Size="Size.Large" />
                </MudHidden>
                <MudHidden Breakpoint="Breakpoint.MdAndUp">
                    <MudIconButton Icon="@Icons.Material.Outlined.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
                </MudHidden>
                <MudHidden Breakpoint="Breakpoint.Xs">
                    <MudText Typo="Typo.h6" Class="ml-4">Admin</MudText>
                </MudHidden>
                <MudHidden Breakpoint="Breakpoint.Xs" Invert="true">
                    <MudText Typo="Typo.subtitle2">Admin</MudText>
                </MudHidden>
                <MudSpacer />
                <MudMenu Icon="@Icons.Material.Outlined.Translate" Color="Color.Inherit" Direction="Direction.Bottom" OffsetY="true" Dense="true">
                    <MudMenuItem>English</MudMenuItem>
                    <MudMenuItem>Swedish</MudMenuItem>
                    <MudMenuItem>Old Norse</MudMenuItem>
                </MudMenu>
                <MudMenu Icon="@Icons.Material.Outlined.Widgets" Color="Color.Inherit" Direction="Direction.Bottom" OffsetY="true" Dense="true">
                    <MudMenuItem Link="https://mudblazor.com/">MudBlazor</MudMenuItem>
                    <MudMenuItem Link="https://github.com/DevJr14/Uniform">Source Code</MudMenuItem>
                </MudMenu>
                <MudMenu Icon="@Icons.Material.Outlined.Settings" Color="Color.Inherit" Direction="Direction.Left" OffsetX="true" Dense="true" Class="mt-1 ml-4">                    
                    <ChildContent>
                        <PersonCard Class="mt-n2" />
                        <MudDivider Class="mb-2" />
                        <MudListItem Text="Account" Icon="@Icons.Material.Outlined.Person" Href="/personal/account" />
                        <MudListItem Text="Logout" Icon="@Icons.Material.Outlined.Logout" OnClick="Logout" />
                    </ChildContent>
                </MudMenu>
            </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="25" ClipMode="DrawerClipMode.Always">
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        <MudHidden Breakpoint="Breakpoint.SmAndDown">
            <MudToolBar DisableGutters="true">
                <MudIconButton Icon="@Icons.Material.Outlined.Menu" Color="Color.Inherit" OnClick="@((e) => DrawerToggle())" Class="ml-3" />
                <MudBreadcrumbs Items="_items"></MudBreadcrumbs>
            </MudToolBar>
        </MudHidden>
        <MudContainer MaxWidth="MaxWidth.False" Class="mt-1">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>
    </Authorized>
</AuthorizeView>