@page "/pages/authentication/reset-password"
@layout MainLayout
@attribute [AllowAnonymous]

<EditForm Model="@ResetPasswordRequest" OnValidSubmit="SubmitAsync">
    <MudGrid>
        <MudItem xs="12" Class="mt-4">
            <div class="d-flex justify-center">
                <MudIcon Icon="@Icons.Material.Filled.Security" Color="Color.Primary" Style="width: 100px; height: 100px;" />
            </div>
        </MudItem>
        <MudItem xs="12">
            <div class="d-flex justify-center">
                <MudText Typo="Typo.h4">Reset password</MudText>
            </div>
        </MudItem>
        <MudItem xs="12">
            <div class="d-flex justify-center">
                <MudText Typo="Typo.subtitle2" Class="mb-n4">Enter email for password reset</MudText>
            </div>
        </MudItem>
        <MudItem xs="12">
            <MudTextField T="string" Label="E-mail" @bind-Value="ResetPasswordRequest.Email" For="@(() => ResetPasswordRequest.Email)" Variant="Variant.Outlined" />
        </MudItem>
        <MudItem xs="12">
            <MudTextField T="string" Label="Password" @bind-Value="ResetPasswordRequest.Password" For="@(() => ResetPasswordRequest.Password)" Variant="Variant.Outlined" InputType="@_passwordInput" Adornment="Adornment.End" AdornmentIcon="@_passwordInputIcon" OnAdornmentClick="TogglePasswordVisibility" />
        </MudItem>
        <MudItem xs="12">
            <MudTextField T="string" Label="Confirm Password" @bind-Value="ResetPasswordRequest.ConfirmPassword" For="@(() => ResetPasswordRequest.ConfirmPassword)" Variant="Variant.Outlined" InputType="InputType.Password" />
        </MudItem>
        <MudItem xs="12" Class="d-flex justify-center">
            <MudButton Variant="Variant.Filled" Color="Color.Primary" ButtonType="ButtonType.Submit" Size="Size.Large" FullWidth="true">Reset Password</MudButton>
        </MudItem>
    </MudGrid>
</EditForm>
