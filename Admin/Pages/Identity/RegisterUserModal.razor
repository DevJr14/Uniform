<EditForm Model="@_registerUserModel" OnValidSubmit="SubmitAsync">
    <MudDialog>
        <TitleContent>
            @{
                <MudText Typo="Typo.h6">
                    <MudIcon Icon="@Icons.Material.Filled.VerifiedUser" Class="mr-3 mb-n1" />
                    Register User
                </MudText>
            }
        </TitleContent>
        <DialogContent>
            <MudGrid>
                <MudItem xs="12" sm="12" md="12">
                    <MudTextField For="@(() => _registerUserModel.UserName)" Margin="Margin.Dense" Variant="Variant.Outlined" @bind-Value="_registerUserModel.UserName" Label="User Name" />
                </MudItem>
                <MudItem xs="12" sm="12" md="12">
                    <MudTextField For="@(() => _registerUserModel.FirstName)" Margin="Margin.Dense" Variant="Variant.Outlined" @bind-Value="_registerUserModel.FirstName" Label="First Name" />

                </MudItem>
                <MudItem xs="12" sm="12" md="12">
                    <MudTextField For="@(() => _registerUserModel.LastName)" Margin="Margin.Dense" Variant="Variant.Outlined" @bind-Value="_registerUserModel.LastName" Label="Last Name" />
                </MudItem>
                <MudItem xs="12" sm="12" md="12">
                    <MudTextField For="@(() => _registerUserModel.Email)" InputType="InputType.Email" Margin="Margin.Dense" Variant="Variant.Outlined" @bind-Value="_registerUserModel.Email" Label="Email" />
                </MudItem>
                <MudItem xs="12" sm="12" md="12">
                    <MudTextField For="@(() => _registerUserModel.PhoneNumber)" Margin="Margin.Dense" Variant="Variant.Outlined" @bind-Value="_registerUserModel.PhoneNumber" Label="Phone Number" />
                </MudItem>
                <MudItem xs="12" sm="12" md="12">
                    <MudTextField For="@(() => _registerUserModel.Password)" Margin="Margin.Dense" Variant="Variant.Outlined" InputType="@_passwordInput" Adornment="Adornment.End" AdornmentIcon="@_passwordInputIcon" OnAdornmentClick="TogglePasswordVisibility" @bind-Value="_registerUserModel.Password" Label="Password" />
                </MudItem>
                <MudItem xs="12" sm="12" md="12">
                    <MudTextField For="@(() => _registerUserModel.ConfirmPassword)" Margin="Margin.Dense" Variant="Variant.Outlined" InputType="InputType.Password" @bind-Value="_registerUserModel.ConfirmPassword" Label="Confirm Password" />
                </MudItem>
                <MudItem xs="12" sm="6" md="6">
                    <MudCheckBox @bind-Checked="@_registerUserModel.ActivateUser" Label="Activate User?" Color="Color.Primary"></MudCheckBox>
                </MudItem>
                <MudItem xs="12" sm="6" md="6">
                    <MudCheckBox @bind-Checked="@_registerUserModel.AutoConfirmEmail" Label="Auto Confirm Email?" Color="Color.Primary"></MudCheckBox>
                </MudItem>
            </MudGrid>
        </DialogContent>
        <DialogActions>
            <MudButton DisableElevation Variant="Variant.Filled" Class="mr-auto" OnClick="Cancel">Cancel</MudButton>
            @{
                <MudButton DisableElevation Variant="Variant.Filled" ButtonType="ButtonType.Submit" Color="Color.Success">Register</MudButton>
            }
        </DialogActions>
    </MudDialog>
</EditForm>