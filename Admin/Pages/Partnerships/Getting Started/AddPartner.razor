@page "/partnership/add-partner"

<Header OnClose="Cancel" Title="Partnership" Description="Add Partnership Details" />
<MudTimeline TimelinePosition="TimelinePosition.Start" TimelineOrientation="TimelineOrientation.Horizontal">
    <MudTimelineItem Color="Color.Primary" Size="Size.Small">
    </MudTimelineItem>
    <MudTimelineItem Size="Size.Small">
    </MudTimelineItem>
    <MudTimelineItem Size="Size.Small">
    </MudTimelineItem>
    <MudTimelineItem Size="Size.Small">
    </MudTimelineItem>
    @*<MudTimelineItem Size="Size.Small">
    </MudTimelineItem>*@
</MudTimeline>
<EditForm Model="PartnerRequest" OnValidSubmit="SaveAsync">

    <MudCard Elevation="25">
        <MudCardContent>
            <MudGrid>
                <MudItem xs="12" sm="6" md="4">
                    <MudTextField @bind-Value="@PartnerRequest.Name"
                                  Label="Name"
                                  Variant="Variant.Outlined"
                                  Margin="Margin.Dense" />
                </MudItem>
                <MudItem xs="12" sm="6" md="4">
                    <MudSelect T="string" Label="Type" @bind-Value="@PartnerRequest.Type"
                               Variant="Variant.Outlined"
                               OffsetY="true"
                               Margin="Margin.Dense"
                               Dense="true">
                        <MudSelectItem Value="@("Seller")" />
                        <MudSelectItem Value="@("Tailor")" />
                        <MudSelectItem Value="@("Deliver")" />
                    </MudSelect>
                </MudItem>
                <MudItem xs="12" sm="6" md="4">
                    <MudTextField @bind-Value="@PartnerRequest.RegistrationNo"
                                  Label="Registration No"
                                  Variant="Variant.Outlined"
                                  Margin="Margin.Dense" />
                </MudItem>
                <MudItem xs="12" sm="6" md="4">
                    <MudDatePicker @ref="_picker" @bind-Date="@PartnerRequest.RegistrationDate"
                                   Label="Registration Date"
                                   Variant="Variant.Outlined"
                                   Margin="Margin.Dense" />
                </MudItem>
                <MudItem xs="12" sm="6" md="4">
                    <MudTextField @bind-Value="@PartnerRequest.TaxNo"
                                  Label="Tax No"
                                  Variant="Variant.Outlined"
                                  Margin="Margin.Dense" />
                </MudItem>
                <MudItem xs="12" sm="12" md="12">
                    <MudTextField Lines="2" @bind-Value="@PartnerRequest.Description"
                                  Label="Description"
                                  Variant="Variant.Outlined"
                                  Margin="Margin.Dense" />
                </MudItem>
            </MudGrid>
        </MudCardContent>
        <MudCardActions Class="mx-2">
            <MudButton DisableElevation Variant="Variant.Filled" OnClick="Cancel">Cancel</MudButton>
            <MudSpacer />
            @*<MudButton DisableElevation Variant="Variant.Filled" ButtonType="ButtonType.Submit" Class="mr-2" Color="Color.Secondary">Save</MudButton>*@
            <MudButton DisableElevation Variant="Variant.Filled" ButtonType="ButtonType.Submit" Color="Color.Success">Save And Continue</MudButton>
        </MudCardActions>
    </MudCard>

</EditForm>