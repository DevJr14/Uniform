<EditForm Model="DiscountRequest" OnValidSubmit="SaveAsync">
    <MudDialog>
        <TitleContent>
            @{
                if (DiscountRequest.Id == Guid.Empty)
                {
                    <MudText Typo="Typo.h6">
                        <MudIcon Icon="@Icons.Material.Filled.MoneyOff" Class="mr-3 mb-n1" />
                        Add Discount
                    </MudText>
                }
                else
                {
                    <MudText Typo="Typo.h6">
                        <MudIcon Icon="@Icons.Material.Filled.Update" Class="mr-3 mb-n1" />
                        Update Discount
                    </MudText>
                }
            }
        </TitleContent>
        <DialogContent>
            <MudGrid>
                <MudItem xs="12" sm="6" md="8">
                    <MudTextField @bind-Value="@DiscountRequest.Name"
                                  Label="Name"
                                  Variant="Variant.Outlined"
                                  Margin="Margin.Dense" />
                </MudItem>
                <MudItem xs="12" sm="6" md="4">
                    <MudNumericField @bind-Value="@DiscountRequest.Percentage"
                                    Label="Percentage (%)" 
                                    HideSpinButtons="true"
                                    Variant="Variant.Outlined"
                                    Margin="Margin.Dense"
                                    Format="N2"
                                    Culture="@_en"/>
                </MudItem>
                <MudItem xs="12" sm="6" md="6">
                    <MudDatePicker @ref="_picker" @bind-Date="StartDate"
                                   Label="Start Date"
                                   Variant="Variant.Outlined"
                                   Margin="Margin.Dense" />
                </MudItem>
                <MudItem xs="12" sm="6" md="6">
                    <MudDatePicker @ref="_picker" @bind-Date="EndDate"
                                   Label="End Date"
                                   Variant="Variant.Outlined"
                                   Margin="Margin.Dense" />
                </MudItem>
            </MudGrid>
        </DialogContent>
        <DialogActions>
            <MudButton DisableElevation Variant="Variant.Filled" OnClick="Cancel">Cancel</MudButton>
            <MudSpacer />
            @if (DiscountRequest.Id != Guid.Empty)
            {
                <MudButton DisableElevation Variant="Variant.Filled" ButtonType="ButtonType.Submit" Color="Color.Secondary">Update</MudButton>
            }
            else
            {
                <MudButton DisableElevation Variant="Variant.Filled" ButtonType="ButtonType.Submit" Color="Color.Success">Save</MudButton>
            }
        </DialogActions>
    </MudDialog>
</EditForm>
