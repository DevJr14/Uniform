@if (_isLoaded)
{
    <EditForm Model="@ProductPriceResponse" OnValidSubmit="SaveAsync">
        <MudCard Elevation="25">
            <MudCardHeader>
                <CardHeaderContent>
                    <MudText>Product Pricing</MudText>
                </CardHeaderContent>
                <CardHeaderActions>
                    <MudTooltip Text="Save" Delay="0" Placement="Placement.Start">
                        <MudFab Color="Color.Success"
                                Icon="@Icons.Material.Filled.Save"
                                Size="Size.Small" IconSize="Size.Medium" Class="mr-2"
                                DisableElevation="true" aria-label="add"
                                ButtonType="ButtonType.Submit" />
                    </MudTooltip>
                </CardHeaderActions>
            </MudCardHeader>
            <MudCardContent>
                <MudGrid>
                    <MudItem xs="12" sm="6" md="3">
                        <MudNumericField @bind-Value="ProductPriceResponse.Price"
                                         Label="Price"
                                         Variant="Variant.Outlined"
                                         Adornment="Adornment.Start"
                                         AdornmentIcon="@Icons.Material.Filled.AttachMoney"
                                         HideSpinButtons="true"
                                         Margin="Margin.Dense" />
                    </MudItem>
                    <MudItem xs="12" sm="6" md="3">
                        <MudNumericField @bind-Value="ProductPriceResponse.OldPrice"
                                         Label="Old Price"
                                         Variant="Variant.Outlined"
                                         Adornment="Adornment.Start"
                                         AdornmentIcon="@Icons.Material.Filled.AttachMoney"
                                         HideSpinButtons="true"
                                         Margin="Margin.Dense" />
                    </MudItem>
                    <MudItem xs="12" sm="6" md="3">
                        <MudNumericField @bind-Value="ProductPriceResponse.Cost"
                                         Label="Cost"
                                         Variant="Variant.Outlined"
                                         Adornment="Adornment.Start"
                                         AdornmentIcon="@Icons.Material.Filled.AttachMoney"
                                         HideSpinButtons="true"
                                         Margin="Margin.Dense" />
                    </MudItem>
                    <MudItem xs="12" sm="6" md="3">
                        <MudSelect T="Guid" Clearable="true" Label="Discount" @bind-Value="_discountId"
                                   Variant="Variant.Outlined"                                   
                                   OffsetY="true"
                                   Margin="Margin.Dense"
                                   Dense="true">
                            @foreach (var discount in Discounts)
                            {
                                <MudSelectItem T="Guid" Value="@(discount.Id)">@discount.Name</MudSelectItem>
                            }
                        </MudSelect>
                    </MudItem>
                </MudGrid>
            </MudCardContent>
        </MudCard>
    </EditForm>
}
else
{
    <MudProgressCircular Color="Color.Primary" Indeterminate="true" />
}