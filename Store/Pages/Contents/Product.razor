<MudListItem OnClick="ProductDetails">
    <MudGrid Spacing="1">
        <MudItem xs="12" sm="2">
            <MudCard Elevation="0" Style="height:200px;">
                <MudCardMedia Image="images/u1.jpg" Height="200" />
            </MudCard>
        </MudItem>
        <MudItem xs="12" sm="10">
            <MudCard Elevation="25" Style="height:200px;">
                <MudCardHeader>
                    <CardHeaderAvatar>
                        <MudAvatar Color="Color.Secondary">I</MudAvatar>
                    </CardHeaderAvatar>
                    <CardHeaderContent>
                        <MudLink Typo="Typo.body1" Href="@($"/product-details/{ProductResponse.Id}")">@ProductResponse.Name</MudLink>
                    </CardHeaderContent>
                    <CardHeaderActions>
                        <MudTooltip Text="Add To Wish" Delay="0" Placement="Placement.Top">
                            <MudIconButton Icon="@Icons.Material.Filled.Favorite" OnClick="LogA" Color="Color.Secondary" />
                        </MudTooltip>
                    </CardHeaderActions>
                </MudCardHeader>
                <MudCardContent>
                    <MudText Typo="Typo.body2">@ProductResponse.Brand.Name</MudText>
                    <MudText Typo="Typo.body2">@ProductResponse.Description</MudText>
                </MudCardContent>
            </MudCard>
        </MudItem>
    </MudGrid>
</MudListItem>
